                    span.navbar-toggler-icon
            .collapse.navbar-collapse
                ul.navbar-nav.ml-auto
                    li.nav-item
                        a.nav-link(href='/about_us', target="_blank")
                            i.material-icons info
                            |  About us
                    li.dropdown.nav-item
                        a.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                            i.material-icons apps
                            |  Menu
                        .dropdown-menu.dropdown-with-icons
                            a.dropdown-item(href='/privacy')
                                i.material-icons layers
                                |  Privacy Policy
                            a.dropdown-item(href='/contact')
                                i.material-icons mail_outline
                                |  Contact us
                    li.nav-item
                        a.nav-link(href='https://github.com/geekyjaat', target="_blank")
                            i.fa.fa-github
                            |  Projects
                    li.nav-item
                        a.nav-link(rel='tooltip' title='' data-placement='bottom' href='https://twitter.com/guliavikram' target='_blank' data-original-title='Follow us on Twitter')
                            i.fa.fa-twitter
                    li.nav-item
                        a.nav-link(rel='tooltip' title='' data-placement='bottom' href='https://www.instagram.com/guliavikram' target='_blank' data-original-title='Follow us on Instagram')
